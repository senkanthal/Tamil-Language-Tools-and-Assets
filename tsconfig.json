{
  "compilerOptions": {
    /* Language and target */
    "target": "ES2020",
    "lib": ["esnext"],

    /* Module resolution */
    "module": "ESNext",
    "moduleResolution": "node",

    /* Project structure */
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    /* TypeScript strictness */
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* Build control */
    "noEmit": false,
    "outDir": "dist",
    "isolatedModules": false,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "include": ["index.ts", "assets/**/*.ts"],
  "exclude": ["node_modules"]
}
