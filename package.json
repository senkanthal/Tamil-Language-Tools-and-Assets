{
  "name": "tamil-language-tools-and-assets",
  "version": "1.0.4",
  "description": "A collection of tools and assets for processing and analyzing the Tamil language, including regex patterns, datasets, and utilities.",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write ."
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "auto"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
